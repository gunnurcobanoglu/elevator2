using System.Windows;
using System.Windows.Controls;
using System.Windows.Media;
using System.Windows.Shapes;

namespace elevator_simulation
{
    /// <summary>
    /// Interaction logic for MainWindow.xaml
    /// </summary>
    public partial class MainWindow : Window
    {
        // Sabitler: Katların görsel ayarları
        private const int KatYuksekligi = 55;
        private const int ToplamKatSayisi = 19; // 0'dan 19'a kadar (20 kat)

        /// <summary>
        /// Yapıcı (Constructor): Uygulama başladığında çalışır
        /// </summary>
        public MainWindow()
        {
            InitializeComponent();
            Loaded += MainWindow_Loaded;
        }

        private void MainWindow_Loaded(object sender, RoutedEventArgs e)
        {
            // Asansör 1 Canvas
            var canvas1 = FindName("Elevator1Canvas") as Canvas;
            if (canvas1 != null)
            {
                CizgileriOlustur(canvas1);
            }

            // Asansör 2 Canvas
            var canvas2 = FindName("Elevator2Canvas") as Canvas;
            if (canvas2 != null)
            {
                CizgileriOlustur(canvas2);
            }
        }

        /// <summary>
        /// Bina kat çizgilerini ve numaralarını döngü ile Canvas üzerine yerleştirir.
        /// Her kat için bir çizgi (Line) ve bir kat numarası (TextBlock) oluşturur.
        /// </summary>
        private void CizgileriOlustur(Canvas canvas)
        {
            if (canvas == null) return;

            // N, 0. kattan (zemin) başlayıp 19. kata (en üst) kadar ilerler.
            for (int N = 0; N <= ToplamKatSayisi; N++)
            {
                // Canvas.Bottom Formülleri:
                // Her kat, bir önceki kattan 55 birim (piksel) yukarıdadır.
                double lineBottom = N * KatYuksekligi;
                
                // Kat numarası, çizginin 15 birim yukarısına yerleştirilir.
                double textBottom = lineBottom + 15;

                // 1. Kat Çizgisini Oluşturma (Line)
                Line katCizgisi = new Line
                {
                    X1 = 0,
                    Y1 = 0,
                    X2 = 1000, // Çizginin yatay uzunluğu
                    Y2 = 0,
                    // Koşullu Operatör (Ternary Operator): 
                    // Zemin (0) veya En Üst (19) ise Siyah/Kalın, değilse Kahverengi/İnce.
                    Stroke = (N == 0 || N == ToplamKatSayisi) ? Brushes.Black : Brushes.Brown,
                    StrokeThickness = (N == 0 || N == ToplamKatSayisi) ? 2 : 1
                };
                
                // Çizginin dikey konumunu Canvas üzerinde ayarla (Canvas.Bottom)
                Canvas.SetBottom(katCizgisi, lineBottom);

                // Koşullu Stil: Ara katlarda (1'den 18'e kadar) kesikli çizgi (StrokeDashArray)
                if (N > 0 && N < ToplamKatSayisi)
                {
                    katCizgisi.StrokeDashArray = new DoubleCollection { 5, 2 }; 
                }

                // 2. Kat Numarasını Oluşturma (TextBlock)
                TextBlock katNumarasi = new TextBlock
                {
                    Text = N.ToString(), // Kat numarasını metin olarak ayarla
                    FontSize = 22,
                    FontWeight = FontWeights.Bold,
                    Foreground = Brushes.Brown
                };
                
                // Kat numarasının yatay konumunu ayarla (Canvas.Left)
                Canvas.SetLeft(katNumarasi, 15);
                
                // Kat numarasının dikey konumunu ayarla (Canvas.Bottom)
                Canvas.SetBottom(katNumarasi, textBottom);

                // 3. Oluşturulan görsel öğeleri Canvas'a ekle
                canvas.Children.Add(katCizgisi);
                canvas.Children.Add(katNumarasi);
            }
        }
    }
}
